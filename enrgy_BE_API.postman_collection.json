{
  "info": {
    "name": "Ministry of Energy Backend API",
    "description": "Location API only. Base path: /api/locations. Public endpoints use no auth; create/update/delete require auth + LOCATIONS_MANAGE.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "accessToken", "value": "" },
    { "key": "refreshToken", "value": "" }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [{ "key": "token", "value": "{{accessToken}}", "type": "string" }]
  },
  "item": [
    {
      "name": "Locations",
      "item": [
        {
          "name": "Get Location Tree",
          "request": {
            "auth": { "type": "noauth" },
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/locations/tree",
            "description": "Full hierarchy: countries → governorates → cities → areas. Public."
          }
        },
        {
          "name": "List Countries",
          "request": {
            "auth": { "type": "noauth" },
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/locations/countries",
            "description": "List all countries. Public."
          }
        },
        {
          "name": "List Governorates",
          "request": {
            "auth": { "type": "noauth" },
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/locations/countries/1/governorates",
            "description": "List governorates by countryId. Public."
          }
        },
        {
          "name": "Get Country by ID",
          "request": {
            "auth": { "type": "noauth" },
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/locations/countries/1",
            "description": "Get single country by ID. Public."
          }
        },
        {
          "name": "Create Country",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Egypt\",\n  \"code\": \"EG\"\n}"
            },
            "url": "{{baseUrl}}/api/locations/countries",
            "description": "Create country. Auth + LOCATIONS_MANAGE. Body: name (required), code (optional)."
          }
        },
        {
          "name": "Update Country",
          "request": {
            "method": "PATCH",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Egypt Updated\",\n  \"code\": \"EG\"\n}"
            },
            "url": "{{baseUrl}}/api/locations/countries/1",
            "description": "Update country. Auth + LOCATIONS_MANAGE. Body: name, code (optional)."
          }
        },
        {
          "name": "Delete Country",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": "{{baseUrl}}/api/locations/countries/1",
            "description": "Delete country. Auth + LOCATIONS_MANAGE."
          }
        },
        {
          "name": "List Cities",
          "request": {
            "auth": { "type": "noauth" },
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/locations/governorates/1/cities",
            "description": "List cities by governorateId. Public."
          }
        },
        {
          "name": "Get Governorate by ID",
          "request": {
            "auth": { "type": "noauth" },
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/locations/governorates/1",
            "description": "Get single governorate by ID. Public."
          }
        },
        {
          "name": "Create Governorate",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Cairo\",\n  \"code\": \"CAI\"\n}"
            },
            "url": "{{baseUrl}}/api/locations/countries/1/governorates",
            "description": "Create governorate under country. Auth + LOCATIONS_MANAGE. Body: name (required), code (optional)."
          }
        },
        {
          "name": "Update Governorate",
          "request": {
            "method": "PATCH",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Cairo Governorate\",\n  \"code\": \"CAI\"\n}"
            },
            "url": "{{baseUrl}}/api/locations/governorates/1",
            "description": "Update governorate. Auth + LOCATIONS_MANAGE. Body: name, code (optional)."
          }
        },
        {
          "name": "Delete Governorate",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": "{{baseUrl}}/api/locations/governorates/1",
            "description": "Delete governorate. Auth + LOCATIONS_MANAGE."
          }
        },
        {
          "name": "List Areas",
          "request": {
            "auth": { "type": "noauth" },
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/locations/cities/1/areas",
            "description": "List areas by cityId. Public."
          }
        },
        {
          "name": "Get City by ID",
          "request": {
            "auth": { "type": "noauth" },
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/locations/cities/1",
            "description": "Get single city by ID. Public."
          }
        },
        {
          "name": "Create City",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Nasr City\",\n  \"code\": \"NAS\"\n}"
            },
            "url": "{{baseUrl}}/api/locations/governorates/1/cities",
            "description": "Create city under governorate. Auth + LOCATIONS_MANAGE. Body: name (required), code (optional)."
          }
        },
        {
          "name": "Update City",
          "request": {
            "method": "PATCH",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Nasr City Updated\",\n  \"code\": \"NAS\"\n}"
            },
            "url": "{{baseUrl}}/api/locations/cities/1",
            "description": "Update city. Auth + LOCATIONS_MANAGE. Body: name, code (optional)."
          }
        },
        {
          "name": "Delete City",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": "{{baseUrl}}/api/locations/cities/1",
            "description": "Delete city. Auth + LOCATIONS_MANAGE."
          }
        },
        {
          "name": "Get Area by ID",
          "request": {
            "auth": { "type": "noauth" },
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/locations/areas/1",
            "description": "Get single area by ID (e.g. for branch creation). Public."
          }
        },
        {
          "name": "Create Area",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"District 1\",\n  \"code\": \"D1\"\n}"
            },
            "url": "{{baseUrl}}/api/locations/cities/1/areas",
            "description": "Create area under city. Auth + LOCATIONS_MANAGE. Body: name (required), code (optional)."
          }
        },
        {
          "name": "Update Area",
          "request": {
            "method": "PATCH",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"District 1 Updated\",\n  \"code\": \"D1\"\n}"
            },
            "url": "{{baseUrl}}/api/locations/areas/1",
            "description": "Update area. Auth + LOCATIONS_MANAGE. Body: name, code (optional)."
          }
        },
        {
          "name": "Delete Area",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": "{{baseUrl}}/api/locations/areas/1",
            "description": "Delete area. Auth + LOCATIONS_MANAGE."
          }
        }
      ]
    }
  ]
}
